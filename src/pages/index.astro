---
import '../styles/global.css';
import '@fontsource/ibm-plex-mono/400.css';
import '@fontsource/ibm-plex-mono/600.css';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Carlos Castellanos - Software Developer & Solutions Architect" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Carlos Castellanos - Software Developer</title>
  </head>
  <body class="bg-white min-h-screen">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Main Content -->
      <main class="flex flex-col items-center justify-center mt-32">
        <div class="w-44 h-44 relative mb-16">
          <img 
            src="/avatar.jpg" 
            alt="Carlos Castellanos the Software Developer" 
            class="absolute inset-0 w-full h-full object-cover rounded-full shadow-2xl grayscale"
            style="object-position: center 1%;"
          />
        </div>
        
        <h1 class="text-4xl font-bold mb-4 text-center flex items-center">
          CARLOS CASTELLANOS VERA
          <span class="ml-2 inline-block w-3 h-0.5 bg-black animate-blink"></span>
        </h1>
        
        <p class="text-gray-600 mb-12 tracking-wide">
          SOFTWARE DEVELOPER & SOLUTIONS ARCHITECT
        </p>
        
        <div class="flex gap-8 mb-16">
          <a href="https://github.com/karloscodes" class="nav-link gradient-alt">/GITHUB</a>
          <a href="https://linkedin.com/in/karloscodes" class="nav-link gradient-alt">/LINKEDIN</a>
          <a href="https://twitter.com/karloscodes" class="nav-link gradient-alt">/TWITTER</a>
          <a href="/blog" class="nav-link gradient-alt">/BLOG</a>
        </div>

        <!-- Products Section -->
        <div class="flex flex-col gap-4 items-center w-full max-w-sm">
          <a 
            href="https://pomotto.app" 
            class="w-full inline-flex items-center justify-between px-8 py-3 rounded-full border border-black bg-white text-black font-mono text-sm group hover:bg-black hover:text-white transition-all duration-200"
          >
            <span>Pomotto</span>
            <svg 
              class="h-4 w-4 transition-transform group-hover:translate-x-1" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
          
          <a 
            href="https://karloscodes.gumroad.com/l/team-1-1" 
            class="w-full inline-flex items-center justify-between px-8 py-3 rounded-full border border-black bg-white text-black font-mono text-sm group hover:bg-black hover:text-white transition-all duration-200"
          >
            <span>Engineering managers 1:1 guide</span>
            <svg 
              class="h-4 w-4 flex-shrink-0 ml-4 transition-transform group-hover:translate-x-1" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
        </div>
      </main>
    </div>
  </body>
</html>
