---
import '../styles/global.css';
import '@fontsource/ibm-plex-mono/400.css';
import '@fontsource/ibm-plex-mono/600.css';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Carlos Castellanos - Software engineer - @karloscodes" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content="Carlos Castellanos" />
    <meta property="og:description" content="A software engineer passionate about building things" />
    <meta property="og:image" content="/avatar.jpg" />
    <meta property="og:url" content="https://karloscodes.com" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@karloscodes" />
    
    <title>Carlos Castellanos</title>
  </head>
  <body class="bg-white dark:bg-[#121826] min-h-screen transition-colors duration-300">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Main Content -->
      <main class="flex flex-col items-center justify-center sm:mp-16 mt-32 px-4 sm:px-0">
        <div class="w-44 h-44 relative mb-16">
          <img 
            src="/avatar.jpg" 
            alt="Carlos Castellanos (@karloscodes) the software engineer" 
            class="absolute inset-0 w-full h-full object-cover rounded-full shadow-2xl grayscale hover:grayscale-0 transition-all duration-700"
            style="object-position: center 1%;"
          />
        </div>
        
        <h1 class="text-4xl font-bold mb-2 text-center text-[#15141A] dark:text-white">
          CARLOS CASTELLANOS
        </h1>
        
        <p class="text-[#2f3237] dark:text-gray-400 mb-4 tracking-wide text-lg text-center max-w-lg flex items-center justify-center">
          A software engineer passionate about building things
        </p>
        
        <div class="flex flex-wrap justify-center gap-8 mb-12">
					<a target="_blank" href="https://linkedin.com/in/karloscodes" class="nav-link text-[#15141A] dark:text-gray-200">LINKEDIN</a>
					<a target="_blank" href="https://x.com/karloscodes" class="nav-link text-[#15141A] dark:text-gray-200">X</a>
					<a target="_blank" href="https://bsky.app/profile/karloscodes.com" class="nav-link text-[#15141A] dark:text-gray-200">BLUESKY</a>
					<a target="_blank" href="https://blog.karloscodes.com" class="nav-link text-[#15141A] dark:text-gray-200">WRITINGS</a>
        </div>

        <!-- Products Section -->
        <div class="flex flex-col gap-4 items-center w-full max-w-sm">
          <p class="text-sm text-[#5B5B66] dark:text-gray-400 mb-4 font-medium tracking-wider">Projects</p>
          
          <a 
            href="https://pomotto.app" 
            target="_blank"
            class="w-full inline-flex items-center justify-between px-8 py-3 rounded-full border border-[#15141A] dark:border-white bg-white dark:bg-transparent text-[#15141A] dark:text-white font-mono text-sm group hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-all duration-200"
          >
            <span>Pomotto</span>
            <svg 
              class="h-4 w-4 transition-transform group-hover:translate-x-1" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
          
          <a 
            href="https://karloscodes.gumroad.com/l/team-1-1" 
            target="_blank"
            class="w-full inline-flex items-center justify-between px-8 py-3 rounded-full border border-[#15141A] dark:border-white bg-white dark:bg-transparent text-[#15141A] dark:text-white font-mono text-sm group hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-all duration-200"
          >
            <span class="text-ellipsis">Engineering managers 1:1 guide</span>
            <svg 
              class="h-4 w-4 flex-shrink-0 ml-4 transition-transform group-hover:translate-x-1" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
        </div>
      </main>
    </div>
  </body>
</html>
